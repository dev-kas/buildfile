{
  "name": "@dev-kas/buildfile",
  "version": "1.0.0",
  "description": "A lightweight, cross-platform build automation tool with a simple DSL. The modern alternative to Makefiles.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc && node dist/index.js",
    "debug": "node --inspect-brk dist/index.js",
    "prepublishOnly": "tsc"
  },
  "bin": {
    "build": "dist/index.js"
  },
  "keywords": [
    "build",
    "makefile",
    "task-runner",
    "automation",
    "cross-platform",
    "dsl",
    "interpreter",
    "workflow",
    "cli",
    "build-tool",
    "dev-tools"
  ],
  "author": "dev-kas",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dev-kas/buildfile.git"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "glob": "^13.0.6"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3"
  }
}
